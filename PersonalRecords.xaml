<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WorkoutLog.Model"
             xmlns:cells="clr-namespace:WorkoutLog.Cells"
             x:Class="WorkoutLog.PersonalRecords"
             Title="Personal Records">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                     Clicked="Add_PR" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="Is_Weight_PR">
                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem Text="{Binding exercise_name}"
                                       IconImageSource="trash_icon.png"
                                       BackgroundColor="Red"
                                       Invoked="Remove_PR" />
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <SwipeView.RightItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem Text="{Binding exercise_name}"
                                       IconImageSource="edit_icon.png"
                                       BackgroundColor="Blue"
                                       Invoked="Update_PR" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Grid RowDefinitions="*"
                          ColumnDefinitions="*, *"
                          VerticalOptions="Center"
                          Margin="10">

                        <Label Text="{Binding exercise_name}"
                               Grid.Column="0"
                               FontSize="16" />

                        <Grid Grid.Column="1"
                              RowDefinitions="*, *"
                              ColumnDefinitions="*, Auto"
                              HorizontalOptions="End" >

                            <Label Text="{Binding date_achieved}"
                                   Grid.Row="0"
                                   FontSize="14"
                                   Grid.ColumnSpan="2"
                                   HorizontalOptions="End" />

                            <Label Text="{Binding weight}"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   FontSize="14"
                                   HorizontalOptions="End" />

                            <Label Text=" lbs."
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   FontSize="14"
                                   HorizontalOptions="End" />
                        </Grid>
                    </Grid>
                </SwipeView>
            </DataTemplate>
            <DataTemplate x:Key="Is_Time_PR">
                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem Text="{Binding exercise_name}"
                                       IconImageSource="trash_icon.png"
                                       BackgroundColor="Red"
                                       Invoked="Remove_PR" />
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <SwipeView.RightItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem Text="{Binding exercise_name}"
                                       IconImageSource="edit_icon.png"
                                       BackgroundColor="Blue"
                                       Invoked="Update_PR" />
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Grid RowDefinitions="*"
                          ColumnDefinitions="*, *"
                          VerticalOptions="Center"
                          Margin="10">

                        <Label Text="{Binding exercise_name}"
                               Grid.Column="0"
                               FontSize="16" />

                        <Grid Grid.Column="1"
                              RowDefinitions="*, *"
                              ColumnDefinitions="*"
                              HorizontalOptions="End" >

                            <Label Text="{Binding date_achieved}"
                                   Grid.Row="0"
                                   FontSize="14"
                                   HorizontalOptions="End" />

                            <Grid Grid.Row="1"
                                  RowDefinitions="*"
                                  ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" >

                                <Label Text="{Binding time_hours}"
                                       Grid.Column="0"
                                       FontSize="14"  />

                                <Label Text=" hrs. "
                                       Grid.Column="1"
                                       FontSize="14"  />

                                <Label Text="{Binding time_min}"
                                       Grid.Column="2"
                                       FontSize="14" />

                                <Label Text=" mins. "
                                       Grid.Column="3"
                                       FontSize="14"  />

                                <Label Text="{Binding time_sec}"
                                       Grid.Column="4"
                                       FontSize="14" />

                                <Label Text=" secs."
                                       Grid.Column="5"
                                       FontSize="14"  />
                            </Grid>
                        </Grid>
                    </Grid>
                </SwipeView>
            </DataTemplate>

            <cells:PRDataTemplateSelector x:Key="PRTypeSelector"
                                          Is_Weight_PR="{StaticResource Is_Weight_PR}"
                                          Is_Time_PR="{StaticResource Is_Time_PR}" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid x:Name="pr_layout"
          RowDefinitions="*"
          ColumnDefinitions="*">

        <CollectionView x:Name="pr_display"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        ItemTemplate="{StaticResource PRTypeSelector}" />
    </Grid>
</ContentPage>