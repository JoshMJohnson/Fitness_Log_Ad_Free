             xmlns:cells="clr-namespace:WorkoutLog.Cells"
             x:Class="WorkoutLog.PersonalRecords"
             Title="Personal Records">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                     Clicked="Add_PR" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="Is_Weight_PR">
                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItemView>
                                <ImageButton Source="trash_icon.png"
                                             Padding="10"
                                             Margin="10"
                                             WidthRequest="50"
                                             HeightRequest="50"
                                             BackgroundColor="Red"
                                             Clicked="Remove_PR"
                                             BindingContext="{Binding exercise_name}"/>
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <SwipeView.RightItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItemView>
                                <ImageButton Source="edit_icon.png"
                                             Padding="10"
                                             Margin="10"
                                             WidthRequest="50"
                                             HeightRequest="50"
                                             BackgroundColor="LightBlue"
                                             Clicked="Update_PR"
                                             BindingContext="{Binding exercise_name}"/>
                            </SwipeItemView>
                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Border Margin="5">
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Offset="20,20"
                                    Radius="40"
                                    Opacity="1" />
                        </Border.Shadow>

                        <Grid RowDefinitions="*"
                              ColumnDefinitions="50, *, *"
                              VerticalOptions="Center"
                              Margin="10">

                            <Image Grid.Column="0"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Source="weight_icon.png" />

                            <Label Text="{Binding exercise_name}"
                                   Grid.Column="1"
                                   Padding="10"
                                   VerticalOptions="Center"
                                   FontSize="16" />

                            <Grid Grid.Column="2"
                                  RowDefinitions="*, *"
                                  ColumnDefinitions="*, Auto"
                                  HorizontalOptions="End" >

                                <Label Text="{Binding date_achieved}"
                                       Grid.Row="0"
                                       FontSize="14"
                                       Grid.ColumnSpan="2"
                                       HorizontalOptions="End" />

                                <Label Text="{Binding weight}"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       FontSize="14"
                                       HorizontalOptions="End" />

                                <Label Text=" lbs."
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       FontSize="14" />
                            </Grid>
                        </Grid>
                    </Border>
                </SwipeView>
            </DataTemplate>

