<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WorkoutLog.Model"
             x:Class="WorkoutLog.BodyProgression"
             Title="Body Progression">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="help_icon.png"
                     Clicked="Help_Window" />
        <ToolbarItem Text="+"
                     Clicked="Add_Body_Progression" />
    </ContentPage.ToolbarItems>

    <Grid x:Name="progression_layout"
          RowDefinitions="*"
          ColumnDefinitions="*">

        <CollectionView x:Name="progression_display"
                        HorizontalOptions="Center"
                        VerticalOptions="Start">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Progression">

                    <Label Text="{Binding image_full_path}"
                           Grid.Column="0"
                           FontSize="16"
                           VerticalOptions="Center" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>