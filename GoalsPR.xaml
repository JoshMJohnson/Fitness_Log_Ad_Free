                            <Grid Grid.Row="1"
                                  RowDefinitions="*"
                                  ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto" >

                                <Label Text="{Binding time_hours}"
                                       Grid.Column="0"
                                       FontSize="14"  />

                                <Label Text=" hrs. "
                                       Grid.Column="1"
                                       FontSize="14"  />

                                <Label Text="{Binding time_min}"
                                       Grid.Column="2"
                                       FontSize="14" />

                                <Label Text=" mins. "
                                       Grid.Column="3"
                                       FontSize="14"  />

                                <Label Text="{Binding time_sec}"
                                       Grid.Column="4"
                                       FontSize="14" />

                                <Label Text=" secs."
                                       Grid.Column="5"
                                       FontSize="14"  />
                            </Grid>
