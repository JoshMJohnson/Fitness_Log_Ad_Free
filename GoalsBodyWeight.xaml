<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:WorkoutLog.Model"
             x:Class="WorkoutLog.GoalsBodyWeight"
             Title="Goals">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+"
                     Clicked="Add_Body_Weight_Goal" />
    </ContentPage.ToolbarItems>
    
    <Grid x:Name="goal_bw_layout"
          RowDefinitions="*"
          ColumnDefinitions="*">
        
        <CollectionView x:Name="body_weight_goals_display"
                        HorizontalOptions="Center"
                        VerticalOptions="Start">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Goal">
                    <Grid RowDefinitions="1"
                          ColumnDefinitions="1">

                        <Label Text="{Binding id}"
                               Grid.Row="0"
                               Grid.Column="0"
                               FontSize="12" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>